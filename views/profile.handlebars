<div class="container">
    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span>Welcome {{user.username}}</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>
    <div class="row">
        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Local</h3>
                <p>
                    <strong>id</strong>: {{user.id}}
                    <br>
                    <strong>username</strong>: {{user.username }}
                    <br>
                    <!-- <strong>password</strong>: {{user.password }} -->
                    <strong>Name</strong>: {{user.fName }} {{user.lName}}
                    <br>
                    <strong>Email</strong>: {{user.email}}
                    <br>
                </p>
            </div>
        </div>
    </div>
    <!-- blogs dump here -->
    <!-- new blob -->
    <div class="col-6 text-center">
        <form class="create-form" id="myForm">
            <div class="form-group">
                <label for="blog-title">Title:</label>
                <input type="text" class="form-control" id="blog-title" placeholder="Title of your blog">
            </div>
            <div class="form-group">
                <textarea class="form-control" id="blog-content" name="blog-content" rows="6" placeholder="Blog Post goes here" required="true" autofocus></textarea>
                <button class="btn btn-outline-dark" type="submit">Add Post
                    <i class="fa fa-plus" aria-hidden="true"></i></button>
            </div>
        </form>
    </div>
    {{#each post}}
    <div class="pages">
        <div class="blog">
            <div class="blog-post">
                <h2 class="blog-post-title">{{this.title}} {{this.id}}</h2>
                <p class="blog-post-meta">{{formatDt this.createTime}}<a href="#">{{this.username}}</a></p>
                {{this.content}}


